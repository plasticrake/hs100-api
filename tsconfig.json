{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./lib"
  },
  "include": ["src/**/*"],
  "typedocOptions": {
    "mode": "library",
    "inputFiles": ["src/index.ts"],
    "out": "docs",
    "excludePrivate": true,
    "excludeProtected": true,
    "stripInternal": true
  }
}
